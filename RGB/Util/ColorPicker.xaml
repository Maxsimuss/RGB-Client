<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sk="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="RGB.Util.ColorPicker">
    <StackLayout VerticalOptions="Fill" HorizontalOptions="Fill">
        <sk:SKCanvasView x:Name="CanvasView" Touch="CanvasView_Touch" PaintSurface="CanvasView_PaintSurface" VerticalOptions="FillAndExpand" HorizontalOptions="Fill" EnableTouchEvents="True"  Margin="10,20"/>
        <Slider Minimum="0" Maximum="1" ValueChanged="Slider_ValueChanged" x:Name="BrightnessSlider" HorizontalOptions="Fill" Margin="10"/>
    </StackLayout>
</ContentView>